<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CustomerMainScreenController">
    <children>
        <TabPane layoutY="-5.0" prefHeight="455.0" prefWidth="601.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="My Accounts">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: orchid;">
                            <children>
                                <TableView fx:id="accountsTableView" layoutX="14.0" layoutY="56.0" prefHeight="200.0" prefWidth="573.0" style="-fx-background-color: pink;">
                                    <columns>
                                        <TableColumn fx:id="accNumberColumn" prefWidth="150.0" text="Account Number" />
                                        <TableColumn fx:id="accTypeColumn" prefWidth="150.0" text="Account Type" />
                                        <TableColumn fx:id="balanceColumn" prefWidth="150.0" text="Balance" />
                                    </columns>
                                </TableView>
                                <Text layoutX="14.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Account Overview">
                                    <font><Font size="18.0" /></font>
                                </Text>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Deposit / Withdraw">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: pink;">
                            <children>
                                <VBox alignment="CENTER" layoutX="151.0" layoutY="63.0" prefHeight="300.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: orchid; -fx-background-radius: 10; -fx-padding: 20;">
                                    <children>
                                        <Label text="Select Account" textFill="WHITE">
                                            <font><Font name="System Bold" size="14.0" /></font>
                                        </Label>
                                        <ComboBox fx:id="accountSelector" prefWidth="250.0" promptText="Choose Account..." />
                                        <Label text="Amount" textFill="WHITE">
                                            <font><Font name="System Bold" size="14.0" /></font>
                                        </Label>
                                        <TextField fx:id="amountField" promptText="0.00" />
                                        <HBox alignment="CENTER" spacing="20.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#handleDeposit" style="-fx-background-color: green; -fx-text-fill: white;" text="DEPOSIT" />
                                                <Button mnemonicParsing="false" onAction="#handleWithdraw" style="-fx-background-color: red; -fx-text-fill: white;" text="WITHDRAW" />
                                            </children>
                                        </HBox>
                                        <Label fx:id="statusLabel" textFill="#fcfcfc" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="My Transactions">
                    <content>
                        <AnchorPane style="-fx-background-color: orchid;">
                            <TableView fx:id="myTransactionsTable" layoutX="14.0" layoutY="50.0" prefHeight="350.0" prefWidth="570.0" style="-fx-background-color: pink;">
                                <columns>
                                    <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
                                    <TableColumn fx:id="colType" prefWidth="100" text="Type" />
                                    <TableColumn fx:id="colAmount" prefWidth="100" text="Amount" />
                                    <TableColumn fx:id="colBalance" prefWidth="100" text="Balance" />
                                </columns>
                            </TableView>
                            <Button layoutX="250.0" layoutY="14.0" onAction="#refreshTransactions" text="Refresh Transactions" />
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="User Details">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: orchid;">
                            <children>
                                <TextField fx:id="customerNameField" editable="false" layoutX="21.0" layoutY="119.0" promptText="customer name" />
                                <TextField fx:id="addressField" editable="false" layoutX="289.0" layoutY="211.0" promptText="address" />
                                <TextField fx:id="contactNumberField" editable="false" layoutX="21.0" layoutY="211.0" promptText="contact number" />
                                <TextField fx:id="customerIdField" editable="false" layoutX="289.0" layoutY="119.0" promptText="customer ID" />
                                <Text layoutX="108.0" layoutY="58.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Details" textAlignment="CENTER" wrappingWidth="289.13671875">
                                    <font><Font size="18.0" /></font>
                                </Text>
                        <Text layoutX="21.0" layoutY="113.0" strokeType="OUTSIDE" strokeWidth="0.0" text="customer name" textAlignment="CENTER" wrappingWidth="127.13671875">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                        <Text layoutX="289.0" layoutY="113.0" strokeType="OUTSIDE" strokeWidth="0.0" text="customer ID" textAlignment="CENTER" wrappingWidth="127.13671875">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                        <Text layoutX="21.0" layoutY="206.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Contact Number" textAlignment="CENTER" wrappingWidth="127.13671875">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                        <Text layoutX="289.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Address" textAlignment="CENTER" wrappingWidth="127.13671875">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.LoginController">
<children>
   <VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: orchid;">
      <children>
         <VBox alignment="CENTER" spacing="10.0">
            <children>
               <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome Back" textAlignment="CENTER">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Text>
               <Label text="Sign in to continue" textAlignment="CENTER" textFill="WHITE" />
            </children>
         </VBox>

         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
            <children>
               <!-- Username Field -->
               <VBox spacing="5.0">
                  <children>
                     <Label text="Username" />
                     <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-pref-width: 240px; -fx-pref-height: 40px;" />
                  </children>
               </VBox>
               <VBox spacing="5.0">
                  <children>
                     <Label text="Password" />
                     <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-pref-width: 240px; -fx-pref-height: 40px;" />
                  </children>
               </VBox>

               <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="240.0" style="-fx-background-color: #6a11cb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="LOGIN" textAlignment="CENTER" />
            </children>
         </VBox>
      </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </VBox>
</children>
</AnchorPane>
